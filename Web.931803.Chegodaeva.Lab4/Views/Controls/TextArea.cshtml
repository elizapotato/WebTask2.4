@{
    ViewData["Title"] = "Text Area";
}

<div class="row">
    <div class="col-md-3">
        <form asp-action="ControlHandler" asp-controller="Controls">
            <h2>Text Area</h2>
            <b>Text</b>

            <input name="type" class="form-control "
                   style="display: none" value="TextArea" />

            @if (ViewBag.Visible)
            {
                <br />
                <textarea  name="answer"></textarea>
                <br />
                <input type="submit" value="Submit" />
            }
            else
            {
                @ViewBag.Answer
            }
        </form>
    </div>
</div>