@{
    ViewData["Title"] = "Text Box";
}

<div class="row">
    <div class="col-md-3">
        <form asp-action="ControlHandler" asp-controller="Controls">
            <h2>Text Box</h2>
            <b>Text</b>

            <input name="type" class="form-control "
                   style="display: none" value="TextBox"/>

            @if (ViewBag.Visible)
            {
                <input name="answer" class="form-control" />
                <br />
                <input type="submit" value="Submit" />
            }
            else
            {
                @ViewBag.Answer
            }
        </form>
    </div>
</div>